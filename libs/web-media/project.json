{
  "name": "web-media",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/web-media/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/web-media",
        "main": "libs/web-media/src/index.ts",
        "entryFile": "libs/web-media/src/index.ts",
        "tsConfig": "libs/web-media/tsconfig.lib.json",
        "assets": [
          "libs/web-media/src/LICENSE.txt",
          "libs/web-media/src/README.md"
        ],
        "project": "libs/web-media/package.json",
        "compiler": "babel",
        "external": ["typescript"],
        "format": ["cjs", "esm"],
        "babelUpwardRootMode": true,
        "updateBuildableProjectDepsInPackageJson": true
      },
      "dependsOn": ["media"]
    },
    "bundle": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "babelUpwardRootMode": true,
        "libraryName": "OctraWebMedia",
        "libraryTargets": ["umd"],
        "index": "",
        "tsConfig": "libs/web-media/tsconfig.lib.json",
        "main": "libs/web-media/src/index.ts",
        "outputPath": "dist/libs/web-media/bundles",
        "compiler": "babel",
        "optimization": true,
        "extractLicenses": true,
        "runtimeChunk": false,
        "vendorChunk": false,
        "generateIndexHtml": false,
        "commonChunk": false,
        "namedChunks": false,
        "webpackConfig": "webpack.config.js"
      },
      "dependsOn": ["build"]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs web-media {args.ver} {args.tag}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/web-media/**/*.ts"]
      }
    }
  },
  "tags": []
}
